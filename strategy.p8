--rendering

function draw_path(p,range)
	if(#p > 1) then
	last=p[1]
	col=9
	for i=1,#p do
		col=9
		if(range) then
		if(i < #p-range)  col=8 
		end
		line(last.x*8+4,last.y*8+4,p[i].x*8+4,p[i].y*8+4,col)
		last=p[i]
	end
	end
end


function options(opt,x,y,w,sl)
	sy=#opt*7
	sx=#opt[w]
	rectfill(x-2,y-2,x+sx*4,y+sy+2,0)
	for o=1,#opt do
		local col=7
		if(o==sl) col=11
		print(opt[o],x,y+(o-1)*8,col)
	end
	rect(x-2,y-2,x+sx*4,y+sy+2,7)
end



