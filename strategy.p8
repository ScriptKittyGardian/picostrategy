function _update()
	lx=pos.x
	ly=pos.y
	
	if(btnp(⬆️)) pos.y-=1
	if(btnp(⬇️)) pos.y+=1
	if(btnp(⬅️)) pos.x-=1
	if(btnp(➡️)) pos.x+=1
	if(lx!=pos.x or ly!=pos.y) path=find_path(pos,ngrid) 	
end

