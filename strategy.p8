function place_unit(x,y,stats)
	unit= {
		x=x,
		y=y,
		stats=stats,
		modifiers=clone(stats,1),
		alive=true
	}
	return unit
end

function get_stat(unit,keyword)
	return unit.stats[keyword] * unit.modifiers[keyword]
end




